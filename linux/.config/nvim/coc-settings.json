{
  "eslint.options": {
    "envs": [ "node", "browser", "es2021" ]
  },
  // "flow.enable": false,
  "python.jediEnabled": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [ "c", "cpp", "objc", "objcpp" ],
      "rootPatterns": [ ".ccls",
        "compile_commands.json",
        ".vim/", ".git/", ".hg/" ],
      "initializationOptions": {
        "index": { "onChange": true },
        "highlight": { "lsRanges": true },
        "cache": { "directory": "/tmp/ccls" }
      }
    }
  }
}
