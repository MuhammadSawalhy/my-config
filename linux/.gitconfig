[init]
    defaultBranch = main

[commit]
    # Lazygit says: Feature not available for users using GPG
    # and I need to use theme features 
    gpgsign = false

[pull]
    rebase = true

[push]
    default = simple

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only --24-bit-color=never

[delta]
    navigate = true  # use n and N to move between diff sections
    line-numbers = true
    side-by-side = false

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
