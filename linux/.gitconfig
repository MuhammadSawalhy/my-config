[alias]
    s = status
    co = checkout
    cb = checkout -b
    mr = merge
    ms = merge --squash
    mnff = merge --no-ff
    br = branch
    ll = log --oneline
    lg = log --pretty=format:"%C(yellow)%h%Creset %C(green)%s%Creset %Cred%d%Creset %Cblue[%an]" --date=short
    cm = commit -m
    cam = commit -am
    csm = commit -S -m
    csam = commit -S -am
    ca = commit --amend --no-edit
    cma = commit --amend --no-edit -m
    cama = commit --amend --no-edit -am
    csma = commit --amend --no-edit -S -m
    casma = commit --amend --no-edit -S -am
    conflicted = !vim +Conflicted

