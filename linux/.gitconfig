[alias]
    s = status
    co = checkout
    cb = checkout -b
    mr = merge
    ms = merge --squash
    mnff = merge --no-ff
    br = branch
    ll = log --oneline
    cm = commit -m
    ca = commit --amend
    cam = commit --amend -m
    csm = commit -S -m
    cas = commit --amend
    caam = commit --amend -am
    casm = commit --amend -S -m
    csam = commit -S -am
    casam = commit --amend -S -am
    conflicted = !vim +Conflicted

